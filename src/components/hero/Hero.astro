---
import { Image } from 'astro:assets'
import s from './Hero.module.sass'

interface Props {
  title: string
  description: string
  image: string
}

const { title, description, image } = Astro.props
---

<div class={s.Hero}>
  <div class={s.Hero__container}>
    <h1 class={s.Hero__title}>{title}</h1>
    <h5 class={s.Hero__description}>{description}</h5>
  </div>
  <div class={s.Hero__image}>
    <Image src={image} alt="Lorem ipsum" width={2400} height={1600} />
  </div>
</div>
