---
import s from './AppLayout.module.sass'
import Head from '@components/Head.astro'

const { title, description, image } = Astro.props
---

<html lang="en">
  <head>
    <Head title={title} description={description} image={image} />
  </head>
  <body>
    <div class={s.layout}>
      <slot />
    </div>
  </body>
</html>
