---
import DateFormat from '@components/DateFormat.astro'
import Header from '@components/Header.astro'
import Link from '@components/Link.astro'
import PostsLite from '@components/PostsLite.astro'
import AppLayout from '@layout/app-layout/AppLayout.astro'
import { type CollectionEntry, getCollection } from 'astro:content'

export async function getStaticPaths() {
  const posts = await getCollection('blog')
  return posts.map((post: { slug: any }) => ({
    params: { slug: post.slug },
    props: post,
  }))
}
type Props = CollectionEntry<'blog'>

const post = Astro.props
const { Content } = await post.render()
---

<AppLayout
  title={post.data.title}
  description={post.data.description}
  image={post.data.heroImage}
>
  <Header full />
  <main class="Post">
    <div class="container">
      <h1>{post.data.title}</h1>
      <DateFormat date={post.data.pubDate} />
      <Content />
      <PostsLite slug={post.slug} />
    </div>
  </main>
</AppLayout>
